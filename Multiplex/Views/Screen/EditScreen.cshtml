@model Data.Models.ScreenModel

@{
    ViewBag.Title = "Edit";
}

<h3>Edit Screen > @Html.DisplayFor(model => model.MultiplexName)</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("_ScreenCreateOrUpdate", Model)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a href="@Url.Action("ScreenList","Screen",new {multiplexId = Model.MultiplexId  })" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
}

