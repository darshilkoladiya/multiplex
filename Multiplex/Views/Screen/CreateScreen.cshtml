@model Data.Models.ScreenModel

@{
    ViewBag.Title = "Create";
}

<h2 style=" font-size: 25px;">Add New Screen >  @Html.DisplayFor(model => model.MultiplexName)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("_ScreenCreateOrUpdate", Model)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Screen" class="btn btn-default" />
                <a href="@Url.Action("ScreenList","Screen",new {multiplexId = Model.MultiplexId  })" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
}


